<!DOCTYPE html>
<html lang="en">
  <%- include('./layout/head.ejs') %>

  <body class="container">
    <div class="row justify-content-center">
      <div class="col-xs-6 col-md-8 col-lg-6">
        <%- title %>

        <div class="p-2">
          <h3><a href="/" id="sub-2">&larr; Back</a></h3>
        </div>
        <div class="p-2">
          <img src="/uploads/<%= pic_uploaded %>" class="img-fluid img-thumbnail" alt="<%= pic_uploaded %>">
        </div>

        <% if (comments.length != 0 ) { %>
        <h3>Comments</h3>
        <% } %>
        <% comments.forEach(comment => { %>
        <blockquote class="blockquote mb-2">
          <p class="mb-0"><%= comment.comment %></p>
          <footer class="blockquote-footer">By <cite><%= comment.author %></cite></footer>
        </blockquote>
        <% }) %>

        <form class="p-2" method="POST" action="/upload/<%= pic_uploaded %>">
          <h3>Make a comment</h3>
          <div class="form-group">
            <label for="author">Name *</label>
            <input class="form-control form-control-sm" type="text" id="author" required>
          </div>
          <div class="form-group">
            <label for="comment">Text *</label>
            <textarea class="form-control form-control-sm" id="comment" rows="2"
              placeholder="Start writing a comment here." required></textarea>
          </div>
          <input type="Submit" class="btn btn-secondary">
        </form>
      </div>
    </div>

    <%- include('./layout/footer.ejs') %>
  </body>

</html>